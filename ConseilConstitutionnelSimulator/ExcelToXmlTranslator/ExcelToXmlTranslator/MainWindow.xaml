<Window x:Class="ExcelToXmlTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelToXmlTranslator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Label x:Name="excelName">Excel File :</Label>
            <Button Click="Button_Click">Browse</Button>
            <Label x:Name="outputDir">Output Directory :</Label>
            <Button Click="Button_Click_1">Browse</Button>
            <TextBox x:Name="FromLineInput">From Line: </TextBox>
            <TextBox x:Name="ToLineInput">To Line:</TextBox>
            <Button Click="Button_Click_2">Translate</Button>
            <Label x:Name="doneLab"></Label>
        </StackPanel>
    </Grid>
</Window>
